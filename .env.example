# Puerto del servidor
PORT=8080

# URI de conexión a MongoDB Atlas
MONGO_URI=mongodb+srv://<usuario>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority

# Clave secreta para firmar los JWT (usa una frase larga y aleatoria)
JWT_SECRET=tu_clave_secreta_muy_segura

# Rounds de bcrypt para hashear passwords (10 es recomendado)
BCRYPT_SALT=10

# Tiempo de expiración de los tokens JWT (ej: 1h, 7d, 30d)
JWT_EXPIRES_IN=1h
